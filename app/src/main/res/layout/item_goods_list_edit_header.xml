<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/content_view" android:tag="layout/item_goods_list_edit_header_0" android:clipChildren="false" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/lv_top" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/relative_view" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <FrameLayout android:id="@+id/add_pic_view" android:tag="binding_1" android:background="?attr/contentBackgroundColor" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp">
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:paddingTop="32dp" android:paddingBottom="32dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_plus_outline_white_24dp" android:tint="?android:attr/textColorTertiary"/>
                    <TextView android:textSize="18sp" android:textColor="?android:attr/textColorTertiary" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="添加封面"/>
                </LinearLayout>
                <TextView android:textSize="12sp" android:textColor="?android:attr/textColorTertiary" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="(无关封面会导致无法获得推荐)"/>
            </LinearLayout>
            <com.coolapk.market.widget.AspectRatioImageView android:id="@+id/iv_cover" android:tag="binding_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:scaleType="centerCrop" app:aspectRatio="0.4" app:aspectRatioEnabled="true"/>
            <ImageView android:layout_gravity="top|right|center_vertical|center_horizontal|center|end" android:id="@+id/pic_close_view" android:tag="binding_3" android:background="#ccdb4437" android:padding="2dp" android:visibility="gone" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_close_white_24dp"/>
        </FrameLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/content_title" android:tag="binding_4" android:background="?attr/contentBackgroundColor" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:foreground="?attr/selectableItemBackground">
            <TextView android:textSize="22sp" android:textStyle="bold" android:textColor="?android:attr/textColorPrimary" android:gravity="center_vertical" android:id="@+id/et_title" android:tag="binding_5" android:background="@null" android:paddingLeft="16dp" android:paddingTop="12dp" android:paddingRight="16dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="好物单标题" android:maxLength="120"/>
            <View android:background="?attr/contentBackgroundDividerColor" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="12dp" android:layout_marginRight="12dp"/>
            <com.dinuscxj.ellipsize.EllipsizeTextView android:textSize="14sp" android:textColor="?android:attr/textColorPrimary" android:gravity="top" android:id="@+id/et_des" android:tag="binding_6" android:background="@null" android:paddingLeft="16dp" android:paddingTop="12dp" android:paddingRight="16dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="80dp" android:hint="好物单简介" android:maxLines="10" android:maxLength="120" android:imeOptions="actionNext"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
