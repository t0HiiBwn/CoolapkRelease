        <ImageView android:id="@+id/tt_bu_img_3" android:layout_width="0dp" android:layout_height="75dp" android:layout_weight="1"/>
    </LinearLayout>
    <TextView android:textSize="16sp" android:textColor="#fff" android:gravity="center" android:id="@+id/tt_bu_download" android:background="@drawable/tt_backup_btn_1" android:layout_width="match_parent" android:layout_height="32dp" android:layout_marginTop="6dp" android:text="@string/tt_video_download_apk"/>
</LinearLayout>
