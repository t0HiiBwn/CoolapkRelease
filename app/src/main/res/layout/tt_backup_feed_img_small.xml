<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="match_parent" android:layout_height="100dp">
    <FrameLayout android:id="@+id/tt_bu_img_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:layout_centerVertical="true">
        <ImageView android:id="@+id/tt_bu_img" android:layout_width="138dp" android:layout_height="92dp" android:scaleType="fitXY"/>
        <include android:layout_gravity="bottom|right|center_vertical|center_horizontal|center" android:layout_width="wrap_content" android:layout_height="wrap_content" layout="@layout/tt_backup_ad2"/>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:paddingTop="4dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="8dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:layout_toRightOf="@+id/tt_bu_img_content" android:layout_centerVertical="true">
        <TextView android:textSize="14sp" android:textColor="#ff999999" android:ellipsize="end" android:id="@+id/tt_bu_desc" android:layout_width="wrap_content" android:layout_height="0dp" android:maxLines="2" android:layout_weight="1"/>
        <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp">
            <TextView android:textSize="12sp" android:textColor="#ffbcbcbc" android:id="@+id/tt_bu_title" android:layout_width="0dp" android:layout_height="wrap_content" android:text="穿山甲联盟" android:layout_weight="1"/>
            <ImageView android:id="@+id/tt_bu_close" android:layout_width="18dp" android:layout_height="15dp" android:src="@drawable/tt_dislike_icon2" android:scaleType="fitXY"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
