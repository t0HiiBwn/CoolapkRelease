    <ImageView android:id="@+id/pause_image_view" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
    <com.coolapk.market.widget.view.DividerLineView android:id="@+id/divider_view" android:layout_width="match_parent" android:layout_height="match_parent"/>
