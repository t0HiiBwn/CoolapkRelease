<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/tt_root_view" android:background="@color/tt_video_playerbg_color" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:gravity="center" android:id="@+id/tt_video_loading_retry_layout" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/tt_video_loading_cover_image" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
        <ProgressBar android:id="@+id/tt_video_loading_progress" android:layout_width="60dp" android:layout_height="60dp" android:indeterminateDrawable="@drawable/tt_video_loading_progress_bar" android:indeterminateDuration="1200" android:layout_centerInParent="true"/>
