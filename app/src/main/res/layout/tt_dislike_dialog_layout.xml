<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/tt_dislike_title_content" android:background="@drawable/tt_dislike_top_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="44dp">
        <TextView android:textSize="14sp" android:textColor="@color/tt_header_font" android:gravity="center" android:id="@+id/tt_dislike_header_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tt_dislike_header_tv_back" android:drawableLeft="@drawable/tt_lefterbackicon_titlebar_press" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="15sp" android:textColor="@color/tt_header_font" android:gravity="center" android:id="@+id/tt_dislike_header_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tt_dislike_header_tv_title" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View android:id="@+id/tt_dislike_line1" android:background="#0f161823" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
