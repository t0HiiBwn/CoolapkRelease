<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center" android:background="@color/tt_common_download_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/tt_download_layout" android:background="@drawable/tt_common_download_bg" android:layout_width="300dp" android:layout_height="300dp">
        <com.bytedance.sdk.openadsdk.core.widget.TTRoundRectImageView android:layout_gravity="center_horizontal" android:id="@+id/tt_download_icon" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="32dp"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#161823" android:ellipsize="end" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tt_download_title" android:layout_width="200dp" android:layout_height="24dp" android:layout_marginTop="8dp" android:singleLine="true" android:lineSpacingExtra="2sp"/>
        <TextView android:textSize="12sp" android:textColor="#4d161823" android:ellipsize="end" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tt_download_app_version" android:layout_width="110dp" android:layout_height="16dp" android:layout_marginTop="8dp" android:singleLine="true" android:lineSpacingExtra="2sp"/>
        <TextView android:textSize="12sp" android:textColor="#4d161823" android:ellipsize="end" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tt_download_app_developer" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:singleLine="true" android:lineSpacingExtra="2sp"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="17dp" android:layout_marginTop="18dp">
            <TextView android:textSize="12sp" android:textColor="#1a73e8" android:gravity="center" android:id="@+id/tt_download_app_detail" android:layout_width="70dp" android:layout_height="match_parent" android:layout_marginLeft="64dp" android:text="@string/tt_common_download_app_detail" android:layout_alignParentLeft="true"/>
            <ImageView android:background="#d8d8d8" android:layout_width="0.5dp" android:layout_height="9dp" android:layout_centerInParent="true"/>
            <TextView android:textSize="12sp" android:textColor="#1a73e8" android:gravity="center" android:id="@+id/tt_download_app_privacy" android:layout_width="70dp" android:layout_height="match_parent" android:layout_marginRight="64dp" android:text="@string/tt_common_download_app_privacy" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <Button android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tt_download_btn" android:background="@drawable/tt_download_dialog_btn_bg" android:layout_width="276dp" android:layout_height="36dp" android:layout_marginTop="20dp"/>
        <TextView android:textSize="12sp" android:textColor="#66161823" android:gravity="center_horizontal" android:id="@+id/tt_download_cancel" android:layout_width="70dp" android:layout_height="17dp" android:layout_marginTop="11dp" android:text="@string/tt_common_download_cancel"/>
    </LinearLayout>
</RelativeLayout>
