<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:padding="6dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/tt_ad_container" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="26dp"/>
    <ImageView android:id="@+id/tt_bu_img" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="26dp" android:scaleType="fitXY"/>
    <include android:layout_gravity="bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" layout="@layout/tt_backup_ad"/>
    <TextView android:layout_gravity="bottom|left|center_vertical|center_horizontal|center" android:id="@+id/tt_bu_dislike" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="30dp" android:text="反馈"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="12sp" android:textColor="#3e3e3e" android:ellipsize="end" android:id="@+id/tt_bu_desc" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="1" android:layout_weight="1"/>
        <ImageView android:id="@+id/tt_bu_close" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/tt_titlebar_close_press_for_dark" android:scaleType="fitXY"/>
    </LinearLayout>
</FrameLayout>
