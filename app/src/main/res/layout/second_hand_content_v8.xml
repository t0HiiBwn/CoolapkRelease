        <View android:tag="binding_4" android:background="?attr/contentBackgroundDeepDividerColor" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="16dp" android:layout_marginRight="16dp"/>
        <EditText android:textSize="16sp" android:gravity="start" android:id="@+id/edit_text" android:tag="binding_5" android:background="@null" android:padding="16dp" android:scrollbars="none|horizontal|vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:lineSpacingMultiplier="1.5"/>
