<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/ttdownloader_bg_white_corner" android:layout_width="290dp" android:layout_height="wrap_content">
        <TextView android:textSize="16sp" android:textColor="#222222" android:id="@+id/message_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="16dp" android:text="是否在WiFi环境下恢复下载？"/>
        <LinearLayout android:layout_gravity="end" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="26dp" android:layout_marginBottom="16dp">
            <TextView android:textSize="13sp" android:textColor="#cfcfcf" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/cancel_tv" android:background="#ffffff" android:layout_width="70dp" android:layout_height="33dp" android:text="不，谢谢"/>
            <TextView android:textSize="13sp" android:textColor="#ffffff" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/confirm_tv" android:background="@drawable/ttdownloader_bg_button_blue_corner" android:layout_width="70dp" android:layout_height="33dp" android:layout_marginLeft="8dp" android:layout_marginRight="16dp" android:text="好的"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
