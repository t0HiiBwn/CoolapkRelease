<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="#ccc">
    <item>
        <layer-list>
            <item android:id="@android:id/background">
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="2dp" android:topRightRadius="2dp" android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp"/>
                    <stroke android:width="1dp" android:color="?attr/colorAccent"/>
                    <solid android:color="@android:color/transparent"/>
                </shape>
            </item>
            <item android:id="@android:id/progress">
                <clip android:clipOrientation="horizontal">
                    <shape android:shape="rectangle">
                        <corners android:topLeftRadius="2dp" android:topRightRadius="2dp" android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp"/>
                        <solid android:color="?attr/colorAccent"/>
                    </shape>
                </clip>
            </item>
        </layer-list>
    </item>
</ripple>
