<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="ring" android:innerRadiusRatio="9" android:thicknessRatio="50" android:useLevel="false">
            <solid android:color="@color/accent_grey"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <rotate android:fromDegrees="-90" android:toDegrees="-90">
            <shape android:shape="ring" android:innerRadiusRatio="9" android:thicknessRatio="50" android:useLevel="true">
                <solid android:color="?attr/colorAccent"/>
            </shape>
        </rotate>
    </item>
</layer-list>
