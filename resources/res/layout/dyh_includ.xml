<?xml version="1.0" encoding="utf-8"?>
<com.coolapk.market.widget.DrawSystemBarFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/main_content" android:tag="layout/dyh_includ_0" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent" app:drawStatusBar="true">
    <com.coolapk.market.widget.view.SlideUpView android:id="@+id/bottom_sheet" android:background="?attr/contentBackgroundColor" android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:id="@+id/head_container" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="horizontal" android:paddingLeft="16dp" android:paddingTop="8dp" android:paddingRight="16dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <com.flyco.tablayout.SlidingTabLayout android:id="@+id/tab_layout" android:layout_width="wrap_content" android:layout_height="36dp" app:tl_indicator_width="48dp" app:tl_tab_padding="16dp" app:tl_tab_space_equal="false" app:tl_textsize="16sp"/>
                    <Space android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/close_view" android:background="?attr/selectableItemBackgroundBorderless" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginRight="4dp" android:src="@drawable/ic_close_white_24dp" android:tint="@color/grey_600"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/hint_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="16dp" android:paddingEnd="16dp">
                    <ImageView android:layout_gravity="center" android:id="@+id/title_img_view" android:tag="binding_1" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_information_outline_white_24dp" android:scaleType="centerInside"/>
                    <TextView android:textSize="12sp" android:id="@+id/hint_text" android:tag="binding_2" android:background="@null" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="投稿的动态被管理员设为精选才会显示标签" android:layout_weight="1" android:paddingEnd="16dp"/>
                </LinearLayout>
                <View android:background="?attr/contentBackgroundDividerColor" android:layout_width="match_parent" android:layout_height="0.5dp"/>
                <LinearLayout android:id="@+id/search_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <EditText android:textSize="14sp" android:id="@+id/edit_text" android:tag="binding_3" android:background="@null" android:paddingTop="16dp" android:paddingBottom="16dp" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="搜索看看号" android:layout_weight="1" android:imeOptions="actionSearch" android:paddingStart="16dp"/>
                    <ImageView android:layout_gravity="center" android:id="@+id/clear_button" android:background="?android:attr/selectableItemBackgroundBorderless" android:visibility="gone" android:duplicateParentState="true" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginRight="8dp" android:src="@drawable/ic_clear_gray_24dp" android:scaleType="centerInside"/>
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/search_button_view" android:background="?android:attr/selectableItemBackgroundBorderless" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginRight="16dp" android:src="@drawable/ic_magnify_white_24dp" android:scaleType="center" android:tint="@color/grey_600"/>
                </LinearLayout>
                <View android:id="@+id/search_view_divider" android:background="?attr/contentBackgroundDividerColor" android:layout_width="match_parent" android:layout_height="0.5dp"/>
                <com.coolapk.market.widget.slidr.ScrollStateViewPager android:id="@+id/view_pager" android:layout_width="match_parent" android:layout_height="match_parent"/>
                <FrameLayout android:id="@+id/content_container" android:layout_width="match_parent" android:layout_height="match_parent"/>
            </LinearLayout>
        </FrameLayout>
    </com.coolapk.market.widget.view.SlideUpView>
    <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:background="?attr/contentBackgroundDividerColor" android:layout_width="match_parent" android:layout_height="1dp"/>
        <TextView android:gravity="center" android:id="@+id/action_done" android:background="?attr/contentBackgroundColor" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:foreground="?attr/selectableItemBackground" android:text="完成"/>
    </LinearLayout>
</com.coolapk.market.widget.DrawSystemBarFrameLayout>
