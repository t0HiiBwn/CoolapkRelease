<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="44dp">
        <ImageView android:id="@+id/tt_titlebar_back" android:paddingLeft="5dp" android:paddingTop="5dp" android:paddingRight="5dp" android:paddingBottom="5dp" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/tt_leftbackicon_selector_for_dark" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/tt_titlebar_close" android:paddingLeft="5dp" android:paddingTop="5dp" android:paddingRight="5dp" android:paddingBottom="5dp" android:focusable="true" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/tt_titlebar_close_seletor_for_dark" android:layout_toRightOf="@+id/tt_titlebar_back" android:layout_centerVertical="true" android:layout_toEndOf="@+id/tt_titlebar_back"/>
        <TextView android:ellipsize="marquee" android:gravity="center" android:id="@+id/tt_titlebar_title" android:paddingRight="25dp" android:layout_width="200dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_centerInParent="true" android:layout_centerVertical="true" android:paddingEnd="25dp"/>
        <TextView android:textColor="@android:color/black" android:ellipsize="marquee" android:gravity="right" android:id="@+id/tt_titlebar_dislike" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:text="反馈" android:singleLine="true" android:layout_toRightOf="@+id/tt_titlebar_title" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_toEndOf="@+id/tt_titlebar_title" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/tt_titlebar_detail_layout" android:background="#ffffff" android:visibility="gone" android:layout_width="match_parent" android:layout_height="77dp">
        <ImageView android:background="#f2f2f2" android:layout_width="match_parent" android:layout_height="1dp"/>
        <TextView android:textSize="10sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tt_titlebar_developer" android:layout_width="match_parent" android:layout_height="15dp" android:layout_marginLeft="16dp" android:layout_marginTop="8dp" android:layout_marginRight="16dp" android:singleLine="true"/>
        <TextView android:textSize="10sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/tt_titlebar_app_name" android:layout_width="match_parent" android:layout_height="15dp" android:layout_marginLeft="16dp" android:layout_marginTop="7dp" android:layout_marginRight="16dp" android:singleLine="true"/>
        <RelativeLayout android:background="#26c4c4c4" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="8dp">
            <TextView android:textSize="12sp" android:textColor="#1a73e8" android:gravity="center" android:id="@+id/tt_titlebar_app_detail" android:layout_width="70dp" android:layout_height="match_parent" android:layout_marginLeft="64dp" android:text="@string/tt_common_download_app_detail" android:layout_alignParentLeft="true"/>
            <ImageView android:background="#d8d8d8" android:layout_width="0.5dp" android:layout_height="9dp" android:layout_centerInParent="true"/>
            <TextView android:textSize="12sp" android:textColor="#1a73e8" android:gravity="center" android:id="@+id/tt_titlebar_app_privacy" android:layout_width="70dp" android:layout_height="match_parent" android:layout_marginRight="64dp" android:text="@string/tt_common_download_app_privacy" android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
