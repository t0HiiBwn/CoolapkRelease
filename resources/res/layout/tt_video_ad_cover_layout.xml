<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/tt_video_ad_covers" android:background="@color/tt_trans_half_black" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
