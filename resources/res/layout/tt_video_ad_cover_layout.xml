    <RelativeLayout android:id="@+id/tt_video_ad_cover_center_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <com.bytedance.sdk.openadsdk.core.widget.RoundImageView android:id="@+id/tt_video_ad_logo_image" android:layout_width="44dp" android:layout_height="44dp" android:scaleType="centerInside" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="19sp" android:textStyle="bold" android:textColor="@color/tt_white" android:gravity="center" android:id="@+id/tt_video_btn_ad_image_tv" android:background="@drawable/tt_circle_solid_mian" android:visibility="gone" android:layout_width="44dp" android:layout_height="44dp" android:layout_alignLeft="@+id/tt_video_ad_logo_image" android:layout_alignTop="@+id/tt_video_ad_logo_image" android:layout_alignRight="@+id/tt_video_ad_logo_image" android:layout_alignBottom="@+id/tt_video_ad_logo_image" android:layout_centerHorizontal="true" android:layout_alignStart="@+id/tt_video_ad_logo_image" android:layout_alignEnd="@+id/tt_video_ad_logo_image"/>
        <TextView android:textSize="12sp" android:textColor="@color/tt_white" android:ellipsize="end" android:id="@+id/tt_video_ad_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginBottom="20dp" android:maxLines="1" android:layout_below="@+id/tt_video_ad_logo_image" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="14sp" android:textColor="@color/tt_white" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/tt_video_ad_button" android:background="@drawable/tt_ad_cover_btn_begin_bg" android:padding="2dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="28dp" android:minWidth="72dp" android:layout_below="@+id/tt_video_ad_name" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/tt_video_ad_cover_center_layout_draw" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <TextView android:textSize="34px" android:textColor="@color/tt_white" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/tt_video_ad_button_draw" android:background="@drawable/tt_ad_cover_btn_draw_begin_bg" android:padding="2dp" android:visibility="gone" android:layout_width="580px" android:layout_height="98px" android:layout_marginTop="20dp" android:text="立即下载" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="34px" android:textColor="@color/tt_white" android:ellipsize="end" android:id="@+id/tt_video_ad_replay" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="60px" android:text="点击重播" android:maxLines="1" android:layout_below="@+id/tt_video_ad_button_draw" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
