<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/sdk_title_id" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="44dp">
    <View android:background="@drawable/sdk_title_bg_with_shadow" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentBottom="true"/>
    <ImageButton android:id="@+id/sdk_back" android:background="@null" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/kepler_btn_back" android:minWidth="70dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/sdk_more_select_lin" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
        <ImageButton android:id="@+id/sdk_more_select" android:background="@null" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/kepler_btn_select_more"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/title_close_lin" android:layout_width="wrap_content" android:layout_height="match_parent" android:minWidth="40dp" android:layout_toLeftOf="@+id/sdk_more_select_lin" android:layout_centerVertical="true">
        <TextView android:textSize="14sp" android:textColor="#848689" android:gravity="center" android:id="@+id/sdk_closed" android:paddingLeft="5dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="关闭"/>
        <TextView android:textSize="14sp" android:textColor="#848689" android:gravity="center" android:id="@+id/sdk_xiangqing" android:paddingLeft="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="10sp" android:text="查看订单"/>
    </LinearLayout>
    <TextView android:textSize="16sp" android:textColor="#232326" android:gravity="center" android:id="@+id/sdk_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:layout_centerInParent="true"/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/sdk_title_tabs_layout" android:visibility="gone" android:layout_width="330dp" android:layout_height="match_parent" android:layout_toLeftOf="@+id/title_close_lin" android:layout_toRightOf="@+id/sdk_back"/>
</RelativeLayout>
