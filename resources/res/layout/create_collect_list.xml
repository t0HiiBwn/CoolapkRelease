                <EditText android:textSize="20sp" android:textStyle="bold" android:gravity="center_vertical" android:id="@+id/et_title" android:background="@null" android:paddingLeft="16dp" android:paddingTop="12dp" android:paddingRight="16dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="标题" android:maxLength="120" android:imeOptions="actionNext"/>
                <View android:background="?attr/contentBackgroundDeepDividerColor" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="12dp" android:layout_marginRight="12dp"/>
                <EditText android:textSize="16sp" android:gravity="top" android:id="@+id/et_des" android:background="@null" android:paddingLeft="16dp" android:paddingTop="12dp" android:paddingRight="16dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="180dp" android:hint="简介" android:maxLines="10" android:maxLength="120" android:imeOptions="actionNext"/>
                <View android:background="?attr/commentLayoutDivider" android:layout_width="match_parent" android:layout_height="8dp"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/add_pic_view" android:tag="binding_7" android:background="?android:attr/selectableItemBackground" android:layout_width="match_parent" android:layout_height="48dp">
