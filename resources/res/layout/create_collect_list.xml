                <View android:background="?attr/commentLayoutDivider" android:layout_width="match_parent" android:layout_height="8dp"/>
                <LinearLayout android:orientation="horizontal" android:background="?attr/contentBackgroundColor" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
