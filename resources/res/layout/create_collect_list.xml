                    <com.coolapk.market.widget.AspectRatioImageView android:id="@+id/iv_cover" android:tag="binding_4" android:layout_width="match_parent" android:layout_height="wrap_content" android:scaleType="fitCenter" app:aspectRatio="0.3" app:aspectRatioEnabled="true"/>
