<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_enabled="true" app:state_collapsed="true" app:state_collapsible="true">
        <set>
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="@dimen/app_bar_elevation_enable" android:valueType="floatType" android:propertyName="elevation"/>
        </set>
    </item>
    <item android:state_enabled="true" app:state_collapsed="false" app:state_collapsible="true">
        <set>
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="@dimen/app_bar_elevation_disable" android:valueType="floatType" android:propertyName="elevation"/>
        </set>
    </item>
    <item android:state_enabled="true" app:state_collapsible="false">
        <set>
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="@dimen/app_bar_elevation_enable" android:valueType="floatType" android:propertyName="elevation"/>
        </set>
    </item>
    <item>
        <set>
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="@dimen/app_bar_elevation_disable" android:valueType="floatType" android:propertyName="elevation"/>
        </set>
    </item>
</selector>
